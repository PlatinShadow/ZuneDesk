<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:MediaControls="clr-namespace:ZuneDesk.Controls.MediaControls" x:Class="ZuneDesk.MainWindow"
        mc:Ignorable="d"
        AllowsTransparency="True" WindowStyle="None"
        Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}"
        Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}"
        Left="0" Top="0"
        Title="ZuneDesk">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White" />
    </Window.Background>
    <Grid Margin="0" >
        <MediaControls:MediaControls HorizontalAlignment="Right" Height="524" Margin="0,38,0,0" VerticalAlignment="Top" Width="312"/>
    </Grid>
</Window>
